<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText para o primeiro número -->
    <EditText
        android:id="@+id/etNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o primeiro número"
        android:inputType="number" />

    <!-- EditText para o segundo número -->
    <EditText
        android:id="@+id/etNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o segundo número"
        android:inputType="number" />

    <!-- Botão para validar e calcular os números primos -->
    <Button
        android:id="@+id/btnCalcularPrimos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Primos" />

    <!-- Botão para limpar os campos -->
    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar" />

    <!-- TextView para exibir o erro -->
    <TextView
        android:id="@+id/tvErro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

    <!-- TextView para exibir os números primos -->
    <TextView
        android:id="@+id/tvPrimos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black" />
</LinearLayout>
